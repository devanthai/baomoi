<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Admin Login</title>
   

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    <link href="~/Areas/Admin/Content/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">

    <!-- Waves Effect Css -->
    <link href="~/Areas/Admin/Content/plugins/node-waves/waves.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="~/Areas/Admin/Content/plugins/animate-css/animate.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="~/Areas/Admin/Content/css/style.css" rel="stylesheet">
</head>

<body class="login-page">
    <div class="login-box">
        <div class="logo">
            <a href="javascript:void(0);">Admin<b></b></a>
            <small>Trang quảng lý website</small>
        </div>
        <div class="card">
            <div class="body">
                <form id="sign_in" method="POST">
                    <div class="msg">Đăng nhập để tiếp tục</div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">person</i>
                        </span>
                        <div class="form-line">
                            <input id="username" type="text" class="form-control" name="username" placeholder="Username" required autofocus>
                        </div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">lock</i>
                        </span>
                        <div class="form-line">
                            <input id="password" type="password" class="form-control" name="password" placeholder="Password" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-8 p-t-5">
                            <input type="checkbox" name="rememberme" id="rememberme" class="filled-in chk-col-pink">
                            <label for="rememberme">Remember Me</label>
                        </div>
                        <div class="col-xs-4">
                            <button class="btn btn-block bg-pink waves-effect" onclick="Login()">Đăng nhập</button>
                        </div>
                    </div>
                   
                </form>
            </div>
        </div>
    </div>
    <script>

        function Login() {
            const username = $("#username").val()
            const password = $("#password").val()
            $.ajax({
                type: "POST",
                url: "/Auth/PostLogin",
                datatype: 'json',
                data: { Username: username, Password: password },
                success: (data) => {
                    var json = JSON.parse(data);
                    if (json.Error == false) {
                        window.location = "/Admin";
                    }
                    alert(json.Message)
                }
            })
        }
    </script>
    <!-- Jquery Core Js -->
    <script src="~/Areas/Admin/Content/plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="~/Areas/Admin/Content/plugins/bootstrap/js/bootstrap.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="~/Areas/Admin/Content/plugins/node-waves/waves.js"></script>

    <!-- Validation Plugin Js -->
    <script src="~/Areas/Admin/Content/plugins/jquery-validation/jquery.validate.js"></script>

    <!-- Custom Js -->
    <script src="~/Areas/Admin/Content/js/admin.js"></script>
    <script src="~/Areas/Admin/Content/js/pages/examples/sign-in.js"></script>
</body>

</html>