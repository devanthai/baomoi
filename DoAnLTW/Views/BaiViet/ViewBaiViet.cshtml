@using DoAnLTW.Models;
@{
    int id = 0;

    if (ViewData["ID"] != null)
    {
        id = int.Parse(ViewData["ID"].ToString());
    }
    var BaiViet = FuncDB.GetBaiVietByID(id);


   
    ViewBag.Title = ((id == 0 || BaiViet == null) ? "Không tìm thấy bài viết" : BaiViet.Title);

   
}



@*@Html.Raw(BaiViet.Content)*@


<!-- Content Wrapper -->
<div class='flex-center' id='content-wrapper'>
    <div class='container row-x1'>
        <!-- Main Wrapper -->
        <main class='has-cs2' id='main-wrapper'>
           
            <div class='main section' id='main' name='Main Posts'>
                <div class='widget Blog' data-version='2' id='Blog1'>
                    <div class="blog-posts hfeed item-post-wrap">
                        <article class="blog-post hentry item-post" style="
    position: relative;
    float: left;
    width: 100%;
    margin: 0;
">
                            <div class="item-post-inner">
                                <div class="entry-header blog-entry-header p-eh has-meta">
                                    <nav id="breadcrumb"><a class="home" href="/">Trang chủ</a><em class="delimiter"></em><a class="label" href="/BaiViet/ViewType?type=@BaiViet.TheLoai.TypeCode">@BaiViet.TheLoai.TypeName</a></nav>
                                    <h1 class="entry-title">@BaiViet.Title</h1>
                                    <div class="entry-meta">
                                        <div class="align-left">
                                            <span class="entry-time mi"><time class="published" datetime="2021-11-25T05:01:00-08:00">@BaiViet.EntryTime</time></span>
                                        </div>
                                        <div class="align-right">
                                            <span class="entry-comments-link show">0</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="entry-content-wrap">
                                   
                                    @Html.Raw(BaiViet.Content)
                                </div>
                            </div>
                           
                        </article>
                      
                    </div>
                </div>
            </div>
            
        </main>
        <!-- Sidebar Wrapper -->
        <aside id='sidebar-wrapper'>
            <div class='sidebar chubang9x-com-widget-ready section' id='sidebar' name='Thanh bên'>
                <div class='widget LinkList' data-version='2' id='LinkList1'>
                    <div class='widget-title title-wrap'><h3 class='title'>Follow Us</h3></div>
                    <div class='widget-content'>
                        <ul class='social-icons social social-bg'>
                            <li class='facebook link-0'><a alt='facebook' class='facebook btn' href='@FuncDB.GetSetting().LinkFb #LinkFb' rel='noopener noreferrer' target='_blank' title='facebook'></a></li>
                            <li class='twitter link-1'><a alt='twitter' class='twitter btn' href='@FuncDB.GetSetting().Twitter #Twitter' rel='noopener noreferrer' target='_blank' title='twitter'></a></li>
                            <li class='youtube link-2'><a alt='youtube' class='youtube btn' href='@FuncDB.GetSetting().YouTube #Youtube' rel='noopener noreferrer' target='_blank' title='youtube'></a></li>
                            <li class='instagram link-3'><a alt='instagram' class='instagram btn' href='@FuncDB.GetSetting().Instagram #Instagram' rel='noopener noreferrer' target='_blank' title='instagram'></a></li>
                        </ul>
                    </div>
                </div><div class='widget PopularPosts' data-version='2' id='PopularPosts2'>
                    <div class='widget-title title-wrap'><h3 class='title'>Popular Posts</h3></div>
                    <div class='widget-content default-items'>
                        @{
                            int izzzz = 0;

                            var Baivietssssssssss = FuncDB.GetBaiVietCounts(10);
                            foreach (var baiv in Baivietssssssssss)
                            {
                                <div class='default-item ds item-@izzzz++'>
                                    <a class='entry-image-wrap is-image' href='/BaiViet/ViewBaiViet/@baiv.ID' title='@baiv.Title'>
                                        <span class='entry-thumb' data-image='/@baiv.ImageThumbnail.Replace("~/", "")'></span>
                                    </a>
                                    <div class='entry-header'>
                                        <h2 class='entry-title'><a href='/BaiViet/ViewBaiViet/@baiv.ID' title='@baiv.Title'>@baiv.Title</a></h2>
                                        <div class='entry-meta'><span class='entry-time mi'><time class='published' datetime='2021-09-16T01:36:00-07:00'>@baiv.EntryTime</time></span></div>
                                    </div>
                                </div>


                            }
                        }
                    </div>
                </div>
            </div>
        </aside>
    </div>
</div>
<script type='text/javascript'>
    var exportify = {
        noTitle: "Không có tiêu đề",
        viewAll: "Xem tất cả",
        postAuthor: false,
        postAuthorLabel: "",
        postDate: true,
        postDateLabel: "&#8226;"
    }
</script>